<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model.AddOffers">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_text"
        android:layout_margin="50dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="#000"
        android:fontFamily="@font/mons"
        android:text="Add an offer to the Student"/>

    <EditText
        android:id="@+id/select_offers_name"
        android:layout_width="match_parent"
        android:inputType="textImeMultiLine"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:hint="Heading"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/title_text"
        android:textColor="#000"
        android:background="@drawable/rectangle_2"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/select_offers_desc"
        android:layout_width="match_parent"
        android:inputType="textImeMultiLine"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:hint=" Email "
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/select_offers_name"
        android:textColor="#000"
        android:background="@drawable/checkbox_rect"
        android:layout_height="150dp"/>
    <Button
        android:id="@+id/add_new_offer_btn"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/rect_1"
        android:textColor="#fff"
        android:text="Add"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_offers_desc"
        />
</RelativeLayout>