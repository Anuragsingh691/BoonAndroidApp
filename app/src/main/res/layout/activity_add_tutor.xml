<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model.AddTutor">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/select_product_img"
            android:layout_width="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_height="200dp"/>
        <EditText
            android:id="@+id/select_product_name"
            android:layout_width="match_parent"
            android:inputType="textImeMultiLine"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:hint="Name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/select_product_img"
            android:textColor="#000"
            android:background="@drawable/rectangle_2"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/select_product_desc"
            android:layout_width="match_parent"
            android:inputType="textImeMultiLine"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:hint=" Email "
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/select_product_name"
            android:textColor="#000"
            android:background="@drawable/rectangle_2"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/eng_text"
            android:layout_width="match_parent"
            android:inputType="textImeMultiLine"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:hint="language 1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/select_product_desc"
            android:textColor="#000"
            android:background="@drawable/rectangle_2"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/Uclass"
            android:layout_width="match_parent"
            android:inputType="textImeMultiLine"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:hint="class"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/eng_text"
            android:textColor="#000"
            android:background="@drawable/rectangle_2"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/select_product_price"
            android:layout_width="match_parent"
            android:inputType="textImeMultiLine"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:hint="Rating"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/Uclass"
            android:textColor="#000"
            android:background="@drawable/rectangle_2"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/language2"
            android:layout_width="match_parent"
            android:inputType="textImeMultiLine"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:hint="language 2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/select_product_price"
            android:textColor="#000"
            android:background="@drawable/rectangle_2"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/sub"
            android:layout_width="match_parent"
            android:inputType="textImeMultiLine"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:hint="Subject"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/language2"
            android:textColor="#000"
            android:background="@drawable/rectangle_2"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/exp"
            android:layout_width="match_parent"
            android:inputType="textImeMultiLine"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:hint="No of years experience."
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/sub"
            android:textColor="#000"
            android:background="@drawable/rectangle_2"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/cost"
            android:layout_width="match_parent"
            android:inputType="textImeMultiLine"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:hint="cost per hour in rs"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/exp"
            android:textColor="#000"
            android:background="@drawable/rectangle_2"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/add_new_product_btn"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect_1"
            android:textColor="#fff"
            android:text="Add"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cost"
            />
    </RelativeLayout>


</ScrollView>