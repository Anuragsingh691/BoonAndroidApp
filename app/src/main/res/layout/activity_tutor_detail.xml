<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TutorDetailActivity">

    <RelativeLayout
        android:id="@+id/layout1_details"
        android:layout_width="219dp"
        android:layout_height="345dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:background="@drawable/card_bg">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tutor_img_details"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:src="@drawable/ic_boy"/>

        <TextView
            android:id="@+id/tutor_name_details"
            android:layout_below="@+id/tutor_img_details"
            android:layout_marginTop="10dp"
            android:text="Mp Sinha"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/mons"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tutor_rate_details"
            android:layout_below="@+id/tutor_name_details"
            android:layout_marginTop="10dp"
            android:text="Rs99/hr(1.65/min)"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/mons"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RatingBar
            android:id="@+id/details_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tutor_rate_details"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:numStars="5"
            android:stepSize="0.1"
            android:rating="4.7"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

        <TextView
            android:id="@+id/tutor_reviews_details"
            android:layout_below="@+id/details_ratingBar"
            android:layout_marginTop="10dp"
            android:text="[1200 Reviews]"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/mons"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tutor_reviews_details"
           android:gravity="center">


            <RelativeLayout
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:id="@+id/tutor_details_trophy_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/eclipse">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/trophy" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:id="@+id/tutor_details_line_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tutor_details_trophy_layout"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:background="@drawable/eclipse">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tutions_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1_details"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:text="Tutions :"
        android:fontFamily="@font/mons"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tutions_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1_details"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:text="2500"
        android:layout_toRightOf="@id/tutions_title"
        android:fontFamily="@font/mons"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/Level_title_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tutions_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="Level :"
        android:fontFamily="@font/mons"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/Level_txt_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tutions_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="IX - XII"
        android:layout_toRightOf="@id/tutions_title"
        android:fontFamily="@font/mons"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/Subjects_title_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Level_title_details"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="Subjects :"
        android:fontFamily="@font/mons"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/Subjects_txt_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Level_title_details"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="Maths, Chemistry"
        android:layout_toRightOf="@id/Subjects_title_details"
        android:fontFamily="@font/mons"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/Exp_title_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Subjects_title_details"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="Experience :"
        android:fontFamily="@font/mons"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/Exp_txt_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Subjects_title_details"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text=" 2 years"
        android:layout_toRightOf="@id/Exp_title_details"
        android:fontFamily="@font/mons"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/Expertise_title_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Exp_title_details"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="Expertise :"
        android:fontFamily="@font/mons"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/Expertise_txt_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Exp_title_details"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="Binomial Theorem"
        android:layout_toRightOf="@id/Expertise_title_details"
        android:fontFamily="@font/mons"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/More"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Expertise_title_details"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:text="MORE INFO"
        android:fontFamily="@font/mons"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/Linkedin_txt"
        android:layout_width="79dp"
        android:layout_height="43dp"
        android:layout_below="@id/More"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/rectangle_1"
        android:text="LinkedIn"
        android:gravity="center"
        android:fontFamily="@font/mons"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/Website_txt"
        android:layout_width="79dp"
        android:layout_height="43dp"
        android:layout_below="@id/More"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/Linkedin_txt"
        android:background="@drawable/rectangle_1"
        android:text="Website"
        android:gravity="center"
        android:fontFamily="@font/mons"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/Youtube_txt"
        android:layout_width="79dp"
        android:layout_height="43dp"
        android:layout_below="@id/More"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/Website_txt"
        android:background="@drawable/rectangle_1"
        android:text="Youtube Videos"
        android:gravity="center"
        android:fontFamily="@font/mons"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/proceed_btn_details"
        android:layout_width="120.82dp"
        android:layout_height="35dp"
        android:background="@drawable/rect_1"
        android:layout_below="@id/Website_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="PROCEED"
        android:fontFamily="@font/mons"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="12sp"/>

</RelativeLayout>