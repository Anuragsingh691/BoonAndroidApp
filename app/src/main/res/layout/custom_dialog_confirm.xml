<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="323dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="39dp"
    android:layout_centerInParent="true">

    <TextView
        android:id="@+id/confirmation_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="CONFIRMATION"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/mons"/>

    <TextView
        android:id="@+id/confirmation_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This screen is just for confirmation \n

\n You have to pay only after you have recieved the entire service"
        android:layout_below="@id/confirmation_txt"
        android:padding="10dp"
        android:textSize="14sp"
        android:textColor="#000"
        android:fontFamily="@font/mons"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/tutor_confirmation_image"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_below="@id/confirmation_desc"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_boy"/>

    <TextView
        android:id="@+id/confirmation_tutor_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tutor_confirmation_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="MP Sinha"
        android:textSize="18sp"
        android:layout_below="@id/confirmation_desc"
        android:textColor="#000"
        android:fontFamily="@font/mons"/>
    <TextView
        android:id="@+id/confirmation_tutor_rate_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tutor_confirmation_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="RS99/hr(1.65/min)"
        android:textSize="18sp"
        android:layout_below="@id/confirmation_tutor_title_txt"
        android:textColor="#000"
        android:fontFamily="@font/mons"/>

    <TextView
        android:id="@+id/confirmation_tutor_desc2_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="You will be connected within 20 minutes with the tutor"
        android:textSize="18sp"
        android:layout_below="@id/tutor_confirmation_image"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/mons"/>

    <Button
        android:id="@+id/confirm_btn2"
        android:layout_width="115.99dp"
        android:layout_height="35dp"
        android:background="@drawable/rect_1"
        android:layout_below="@id/confirmation_tutor_desc2_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="CONFIRM"
        android:fontFamily="@font/mons"
        android:textAlignment="center"
        android:textColor="#fff"
        android:layout_marginBottom="39dp"
        android:textSize="12sp"/>
</RelativeLayout>