<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp"
    android:layout_marginTop="20dp"
    android:background="#E7E6E6"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#E7E6E6"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:id="@+id/tutor_img"
            android:src="@drawable/profile_logo"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tutor_name"
            android:layout_toRightOf="@id/tutor_img"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/mons"
            android:textSize="14sp"
            android:text="Username"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tutor_price"
            android:layout_toRightOf="@id/tutor_name"
            android:text="Rs99/hr(1.65/min)"
            android:fontFamily="@font/mons"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userRating"
            android:layout_toRightOf="@id/tutor_img"
            android:text="rating"
            android:fontFamily="@font/mons"
            android:textSize="14sp"
            android:layout_below="@id/tutor_name"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/line_img"
            android:layout_width="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tutor_price"
            android:background="#E7E6E6"
            android:layout_marginRight="10dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userTutions"
            android:layout_toRightOf="@id/tutor_img"
            android:text="Tutions"
            android:fontFamily="@font/mons"
            android:textSize="14sp"
            android:layout_below="@id/userRating"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/line_img"
            android:background="#E7E6E6"
            android:layout_marginRight="10dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/trophy"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tutor_cls"
            android:layout_toRightOf="@id/tutor_img"
            android:text="XI-XII"
            android:fontFamily="@font/mons"
            android:textSize="14sp"
            android:layout_below="@id/userTutions"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tutor_sub"
            android:layout_toRightOf="@id/tutor_img"
            android:text="Subject"
            android:fontFamily="@font/mons"
            android:textSize="14sp"
            android:layout_below="@id/tutor_cls"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>