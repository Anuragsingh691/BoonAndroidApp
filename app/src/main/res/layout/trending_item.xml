<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="157.71dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="20dp"
    android:background="#fff"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_bg"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tutor_img"
            android:src="@drawable/ic_boy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="78dp"
            android:layout_height="83dp"/>
        <TextView
            android:id="@+id/tutor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Name"
            android:textAlignment="center"
            android:layout_below="@id/tutor_img"
            android:fontFamily="@font/mons"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/userRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4.7/5"
            android:textAlignment="center"
            android:layout_below="@id/tutor_name"
            android:fontFamily="@font/mons"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="#000"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tutor_cls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IX-XII"
            android:textAlignment="center"
            android:layout_below="@id/userRating"
            android:fontFamily="@font/mons"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="#000"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/tutor_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maths"
            android:textAlignment="center"
            android:layout_below="@id/tutor_cls"
            android:fontFamily="@font/mons"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="#000"
            android:gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tutor_sub"
            android:background="@drawable/rect_1"
            android:fontFamily="@font/mons"
            android:text="Rs99/hr(1.65min)"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:textColor="#fff"
            android:gravity="center_horizontal"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>